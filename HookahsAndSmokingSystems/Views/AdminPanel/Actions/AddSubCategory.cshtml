@model HookahsAndSmokingSystems.Models.Interfaces.ICategoryRepository

@{
    ViewData["Title"] = "AddSubCategory";
}

<div>
    <h1 class="display-6 mb-1">Добавление Статуса Заказа</h1>
    <form method="post">

        <div class="mt-5">
            <h6 class="fw-light" style="font-size: 22px">Название статуса:</h6>
            <input type="text" style="width: 250px; height: 40px; resize: none" class="mt-3 me-3" name="name"/>
        </div>
        <p class="mt-3"/>
        
        @Html.DropDownList("categoryName", Model.GetListElementsName().Select(s => new SelectListItem { Text = s.ToString(), Value = s.ToString() }))     
        
        <br/>
        <button class="btn btn-outline-secondary mt-5" type="submit">Добавить Статус для заказа</button>
    </form>
</div>